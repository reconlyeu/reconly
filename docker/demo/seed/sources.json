{
  "$schema": "./schema.json",
  "$comment": "Demo sources for Reconly demo mode. Uses real RSS feed URLs where possible.",
  "sources": [
    {
      "name": "Hacker News",
      "type": "rss",
      "url": "https://news.ycombinator.com/rss",
      "enabled": true,
      "config": {
        "max_items": 30
      }
    },
    {
      "name": "TechCrunch",
      "type": "rss",
      "url": "https://techcrunch.com/feed/",
      "enabled": true,
      "config": {
        "max_items": 20
      }
    },
    {
      "name": "Fireship",
      "type": "youtube",
      "url": "https://www.youtube.com/@Fireship",
      "enabled": true,
      "config": {
        "max_items": 10
      }
    },
    {
      "name": "GitHub Trending",
      "type": "rss",
      "url": "https://mshibanami.github.io/GitHubTrendingRSS/daily/all.xml",
      "enabled": true,
      "config": {
        "max_items": 25
      }
    },
    {
      "name": "GitHub Blog",
      "type": "rss",
      "url": "https://github.blog/feed/",
      "enabled": true,
      "config": {
        "max_items": 15
      }
    },
    {
      "name": "Seeking Alpha - NVDA",
      "type": "rss",
      "url": "https://seekingalpha.com/api/sa/combined/NVDA.xml",
      "enabled": true,
      "config": {
        "max_items": 10
      },
      "include_keywords": ["NVIDIA", "NVDA", "GPU", "AI chip", "data center"],
      "filter_mode": "both"
    },
    {
      "name": "Yahoo Finance - NVDA News",
      "type": "rss",
