---
/**
 * Base layout with sidebar navigation
 * Used by all pages in the application
 *
 * Includes AuthGuard to protect pages when password auth is enabled.
 */
import '../styles/global.css';
import Sidebar from '@components/common/Sidebar.vue';
import ThemeToggle from '@components/common/ThemeToggle.vue';
import ToastProvider from '@components/common/ToastProvider.vue';
import AuthGuard from '@components/auth/AuthGuard.vue';
import GlobalChat from '@components/chat/GlobalChat.vue';

interface Props {
  title?: string;
}

const { title = 'Reconly' } = Astro.props;
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Reconly - Personal Intelligence Platform with AI-powered content digests" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
  </head>
  <body class="bg-bg-base text-text-primary min-h-screen">
    <!-- Toast Provider -->
    <ToastProvider client:only="vue" />

    <!-- Auth Guard - checks authentication before rendering content -->
    <AuthGuard client:load>
      <div class="flex min-h-screen">
        <!-- Sidebar Navigation -->
        <Sidebar client:load currentPath={Astro.url.pathname} />

        <!-- Main Content -->
        <div class="flex-1 ml-64">
          <!-- Top Bar -->
          <header class="sticky top-0 z-40 h-16 bg-bg-surface/80 backdrop-blur-sm border-b border-border-subtle">
            <div class="flex items-center justify-end h-full px-6">
              <div class="flex items-center gap-4">
                <ThemeToggle client:load />
              </div>
            </div>
          </header>

          <!-- Page Content -->
          <main class="p-6">
            <slot />
          </main>
        </div>
      </div>

      <!-- Global Chat (Floating Tab + Quick Panel) -->
      <GlobalChat client:load />
    </AuthGuard>

    <!-- Theme initialization script -->
    <script is:inline>
      // Check for saved theme preference or system preference
      const getTheme = () => {
        if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
          return localStorage.getItem('theme');
        }
        if (window.matchMedia('(prefers-color-scheme: light)').matches) {
          return 'light';
        }
        return 'dark';
      };

      const theme = getTheme();
      document.documentElement.classList.remove('light', 'dark');
      document.documentElement.classList.add(theme);
    </script>
  </body>
</html>
